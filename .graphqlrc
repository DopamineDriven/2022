    "./next/src/graphql/mutations/**/*.graphql",
    "./next/src/graphql/fragments/**/*.graphql"
  ],
  "extensions": {
    "languageService": {
      "useSchemaFileDefinitions": true
    },
    "endpoints": {
      "dev": "http://localhost:3000/graphql"
    }
  },
  "schema": "./nest/src/schema.gql"
}
