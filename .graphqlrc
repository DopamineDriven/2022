{
  "name": "Nesting",
  "documents": [
    "./nest/graphql/Queries/**/*.graphql",
    "./nest/graphql/Mutations/**/*.graphql",
    "./nest/graphql/Fragments/**/*.graphql"
  ],
  "extensions": {
    "languageService": {
      "useSchemaFileDefinitions": true
    },
    "endpoints": {
      "dev": "http://localhost:3000/graphql"
    }
  },
  "schema": "./nest/src/schema.gql"
}
