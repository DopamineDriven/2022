{
  "semi": true,
  "singleQuote": false,
  "trailingComma": "none",
  "arrowParens": "avoid",
  "useTabs": false,
  "tabWidth": 2,
  "bracketSameLine": true,
  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "quoteProps": "as-needed",
  "printWidth": 75,
  "overrides": [
    {
      "files": ["*yaml", "*yml"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "-- \"*css\"",
      "options": {
        "printWidth": 60
      }
    },
    {
      "files": ["*module.css"],
      "options": {
        "printWidth": 40
      }
    }
  ]
}
